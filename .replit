modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "rapidfuzz-cpp", "taskflow"]

[deployment]
deploymentTarget = "autoscale"
run = ["uv", "run", "streamlit", "run", "apps/price_match_engine/app.py", "--server.port", "8501"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "House Brand Matcher"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv run streamlit run apps/price_match_engine/app.py --server.port 8501"
waitForPort = 8501

[workflows.workflow.metadata]
